<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/score_fragment_framelayout"
    android:background="@color/DarkGrey"
    tools:context="com.altarrys.ultimatepixel.game.AScoreScreen$FScoreScreen" >


    <LinearLayout
        android:id="@+id/titleimagelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/scoretextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_weight="1"
            android:text="@string/ScoreFinal"
            android:textAlignment="center"
            android:textSize="80sp"
            android:textColor="@color/White"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scorebuttonslayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/retryButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshapeplay_shadow"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.8"
            android:text="@string/Retry"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/medium_font"
            android:onClick="retry"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ShareButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshapeplay_shadow"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.8"
            android:textStyle="bold"
            android:onClick="share"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/Share"
            android:textSize="@dimen/medium_font"
            android:textColor="@color/White"/>

        <Button
            android:id="@+id/BackMenuButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshapeplay_shadow"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.8"
            android:textStyle="bold"
            android:onClick="backToMenu"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/Menu"
            android:textSize="@dimen/medium_font"
            android:textColor="@color/White"/>

    </LinearLayout>

</FrameLayout>