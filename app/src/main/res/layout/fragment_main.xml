<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_fragment_framelayout"
    tools:context="com.altarrys.ultimatepixel.game.MainActivity$PlaceholderFragment" >


    <LinearLayout
        android:id="@+id/titleimagelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="300dp"
            android:src="@drawable/pixelultimatelogo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menubuttonslayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/playButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshapeplay"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.8"
            android:text="@string/PlayButtonText"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/medium_font"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ScoreButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshapescore"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.8"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/Score"
            android:textSize="@dimen/medium_font"
            android:textColor="@color/White"/>

    </LinearLayout>

</FrameLayout>