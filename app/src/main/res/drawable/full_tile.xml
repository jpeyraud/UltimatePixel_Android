<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:id="@+id/pixelTileItem" android:drawable="@drawable/pixel_tile"></item>

    <!-- over left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/LightPixelTileShadow"
                android:centerX="0.8"
                android:endColor="@color/DarkPixelTileShadow"
                android:startColor="@color/LightPixelTileShadow" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/LightPixelTileShadow"
                android:centerX="0.8"
                android:endColor="@color/DarkPixelTileShadow"
                android:startColor="@color/LightPixelTileShadow" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:centerColor="@color/LightPixelTileShadow"
                android:centerY="0.98"
                android:endColor="@color/LightPixelTileShadow"
                android:startColor="@color/DarkPixelTileShadow"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@color/LightPixelTileShadow"
                android:centerY="0.98"
                android:endColor="@color/LightPixelTileShadow"
                android:startColor="@color/DarkPixelTileShadow"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>


</layer-list>
